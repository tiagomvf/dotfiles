# tmux-sessions.conf
# Session templates for automated tmux session creation
# Source this file from ~/.tmux.conf

# ============================================
# Keybindings for Session Creation
# ============================================

# Prefix + C-d: Create development session
bind-key C-d run-shell "tmux new-session -s dev -c ~/workspaces -d \; \
  rename-window 'main' \; \
  new-window -c ~/workspaces -n 'editor' \; \
  new-window -c ~/workspaces -n 'git' \; \
  new-window -c ~/workspaces -n 'logs' \; \
  select-window -t 1"

# Prefix + C-w: Create work session
bind-key C-w run-shell "tmux new-session -s work -c ~/workspaces -d \; \
  rename-window 'project-a' \; \
  new-window -c ~/workspaces -n 'project-b' \; \
  new-window -c ~/workspaces -n 'notes' \; \
  new-window -c ~/workspaces -n 'research' \; \
  select-window -t 1"

# Prefix + C-p: Create personal session
bind-key C-p run-shell "tmux new-session -s personal -c ~ -d \; \
  rename-window 'general' \; \
  new-window -c ~/Downloads -n 'downloads' \; \
  new-window -c ~ -n 'media' \; \
  select-window -t 1"

# Prefix + C-q: Create quick session
bind-key C-q run-shell "tmux new-session -s quick -c ~ -d \; \
  rename-window 'quick'"

